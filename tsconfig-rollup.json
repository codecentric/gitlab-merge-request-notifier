{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/renderer-bundle/tsc",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "sourceMap": true,
    "strict": true,

    "isolatedModules": true,
    "useDefineForClassFields": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "jsx": "react",
    "types": ["vite/client"]
  },
  "include": [
    "src/renderer",
    "src/share"
  ]
}
